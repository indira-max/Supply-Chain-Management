<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_number_Format</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Phone__c , &quot;^\\+?[0-9\\-() ]{7,20}$&quot;))</errorConditionFormula>
    <errorMessage>Phone must be a valid format</errorMessage>
</ValidationRule>
