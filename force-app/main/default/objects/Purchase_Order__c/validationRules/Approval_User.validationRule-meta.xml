<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Approval_User</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( Status__c , &quot;Approved&quot;) , 
ISBLANK( Approved_By__c ) )</errorConditionFormula>
    <errorMessage>Approved By must be filled when Status is Approved</errorMessage>
</ValidationRule>
