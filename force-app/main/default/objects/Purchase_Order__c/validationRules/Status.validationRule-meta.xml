<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Status</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL( Status__c , &quot;Received&quot;) , Total_Quantity__c = 0)</errorConditionFormula>
    <errorMessage>You cannot mark this PO as &quot;Received&quot; unless at least one item has been received.</errorMessage>
</ValidationRule>
