<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_number_must_be_10_digits</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(Phone__c, &quot;\\d{10}&quot;))</errorConditionFormula>
    <errorMessage>Phone number must be exactly 10 digits.</errorMessage>
</ValidationRule>
