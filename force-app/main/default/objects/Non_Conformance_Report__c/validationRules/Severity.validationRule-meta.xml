<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Severity</fullName>
    <active>true</active>
    <errorConditionFormula>AND(  ISPICKVAL( Severity__c , &quot;High&quot;) ,
  NOT( Escalated__c )   )</errorConditionFormula>
    <errorMessage>High severity NCRs must be escalated.</errorMessage>
</ValidationRule>
