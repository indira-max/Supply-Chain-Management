<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_NCR_must_have_a_resolution_and_cl</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL( Resolution_Status__c , &quot;Closed&quot;) , ISBLANK( Resolution_Closure_Date__c ) )</errorConditionFormula>
    <errorMessage>Closed NCR must have a resolution closure date</errorMessage>
</ValidationRule>
