<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Quantity_Validation_Rules</fullName>
    <active>true</active>
    <description>Prevent negative values in quantity.</description>
    <errorConditionFormula>Quantity_Available__c &lt; 0</errorConditionFormula>
    <errorDisplayField>Quantity_Available__c</errorDisplayField>
    <errorMessage>Quantity available cannot be a negative value</errorMessage>
</ValidationRule>
